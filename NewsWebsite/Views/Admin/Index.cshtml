@model List<Service.Interfaces.Entities.NewsEntity>

@{
    ViewBag.Title = "Index";
}

<div class="panel">
    <h3>News list</h3>
    @Html.ActionLink("Add news", "Create", null,
            new { @class = "btn btn-primary btn-sm" })
    <hr>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Name</th>
            <th class="text-center">Action</th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>@Html.ActionLink(item.Name, "Edit", new { newsId = item.Id })</td>
                <td class="text-center">
                    @Html.ActionLink("Delete", "Delete", new { newsId = item.Id }, new { @class= "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
    </table>
</div>